modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Church App"

[[workflows.workflow]]
name = "Church App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd project && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "project/dist", "-l", "5000"]
build = ["sh", "-c", "cd project && npm run build:web"]
